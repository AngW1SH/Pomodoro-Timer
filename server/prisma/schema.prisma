// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pomodoro {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  repeats     Int
  order       Int    @default(0)
  userid      String @default("")
}

model User {
  id       String @id @default(uuid())
  email    String
  password String
}
